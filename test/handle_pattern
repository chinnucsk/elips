handle_pattern(
  [{X, has_father, Y},
   {Y, has_father, Z},
   {Z, has_father, X}], _State)->
    assert({X, has_grand_father, Z});
handle_pattern(
  [{X, has_father, Y},
   {Y, has_mother, Z}], _State)->
    assert({X, has_grand_mother, Z});
handle_pattern(
  [{X, has_father, Y},
   {Y, has_child, Z=#person{sex=S}}], _State) when X=/=Z ->
    if S == male ->
           assert({X, has_brother, Z});
       S == female ->
           assert({X, has_sister, Z})
    end.

